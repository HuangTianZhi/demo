<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title></title>
    <style>
        .img{
            width: 50px;
            height: 50px;
        }
    </style>
</head>

<body>
    <!--The content below is only a placeholder and can be replaced.-->

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">


    <%- include public/component.ejs %>



    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">

                <a href="/home" class="list-group-item ">
                    商品列表</a>
                <a href="/list/add" class="list-group-item">
                    增加商品</a>

                <a href="/classify" class="list-group-item active">分类管理</a>

                <a href="#" class="list-group-item">
                    商品分类列表</a>
                <a href="/classify/add" class="list-group-item">
                    增加商品分类</a>


            </div>
            <div class="col-sm-10">
                <ol class="breadcrumb">
                    <li class="active">商品管理
                    </li>
                    <li class="active">商品列表
                    </li>
                </ol>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        搜索
                    </div>
                    <div class="panel-body">
                        <form role="form" class="form-inline">
                            <div class="form-group">
                                <label for="name">名称</label>
                                <input type="text" class="form-control" id="name" placeholder="请输入名称">
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-default">开始搜索</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!--
                列表展示
            -->
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th class="text-center">编号</th>
                                <th class="text-center">图标</th>
                                <th class="text-center">类别</th>
                                <th class="text-center">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% arr.forEach((item,index)=>{ %>
                            <tr>
                                <td class="text-center"><%=++index%></td>
                                <td class="text-center"><img class="img" src="<%=item.pic%>" alt=""></td>
                                <td class="text-center"><%=item.type%></td> 
                                <td class="text-center">
                                    <!-- 完整路径  -->
                                    <a href="/classify/edit?id=<%=item._id%>">修改</a> | 
                                    <a href="/classify/del?id=<%=item._id%>">删除</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</body>

</html>